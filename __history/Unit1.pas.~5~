 // Procedure ler deðer döndürmezler sadece birþey icra edip býrakýrlar........
// C++ karþýlýðý Void dir.
procedure dosyaOku(dosyaAdi: string);
var
  I: integer;
  txtDosyam:TextFile;
  text:string;
begin
 AssignFile(txtDosyam, dosyaadi);
 ReWrite(txtDosyam);
 FileMode := fmOpenRead;
 ReadLn(txtDosyam, text);
 while not Eof(txtDosyam) do
  begin
    ShowMessage(text);
    ReadLn(txtDosyam, text);
  end;
  CloseFile(txtDosyam);
end;


